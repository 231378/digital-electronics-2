\begin{align*}
    x\cdot y + x\cdot z =&~ x\cdot (y+z)\\
    f(z,y,x)_{\textup{left}} =&~x\cdot y + x\cdot z\\
    f(z,y,x)_{\textup{right}} =&~x\cdot (y+z)\\
\end{align*}

\begin{align*}
    (x+y)\cdot (x+z) =&~ x+ (y\cdot z)\\
    f(z,y,x)_{\textup{left}} =&~(x+y)\cdot (x+z)\\
    f(z,y,x)_{\textup{right}} =&~x+ (y\cdot z)\\
\end{align*}

